<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">{% load i18n static %}
<html xmlns="http://www.w3.org/1999/xhtml">

  <head>
    <title>{% block title %}Page Title{% endblock %}</title>
    <link rel="stylesheet" type="text/css"
        href="{% static "includes/ccliss.css" %}" />
    {% if request.GET.has_key('stylesheet') %}
      <link rel="stylesheet" type="text/css"
            href="{{ request.GET['stylesheet'] }}" />
    {% endif %}
    {% block headers %}{% endblock %}
  </head>

  <body {% if is_rtl %}style="direction:rtl"{% endif%}>
    {% set partner_icon_url = request.GET.get('partner_icon_url', '/images/remote_logo.gif') %}
    <div id="main">
      <div id="page-body">
        <div class="header">
          <img src="{{ partner_icon_url }}" alt="" border="0" />
        </div>

        <div class="nav">
          provided by
          <a href="http://creativecommons.org/"
             >{% blocktrans %}Creative Commons{% endblocktrans %}</a>
        </div>
        {% block body %}{% endblock %}
      </div>
    </div>


  </body>
</html>
{# vim: ft=jinja.html ts=2 sw=2 sts=2 sr et #}
